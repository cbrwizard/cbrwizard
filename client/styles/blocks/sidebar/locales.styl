// Styles for locale switchers

.locales
  display: flex
  justify-content: space-between
  width: 40px
  margin: 10px 0

.flag
  width: 16px
  height: 16px
  background: url(/images/icons/flags.png) no-repeat
  padding: 0

.flag--primary
  opacity: .5
  cursor: default

.flag.ru-RU
  background-position: -16px 0

.flag.en
  background-position: 0 -16px
