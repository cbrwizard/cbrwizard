@import './../../support/variables/structure.import'
@import './../../support/variables/colors.import'

// Contains actual dynamic content

.dynamic-container
  padding: 0 0 50px
  margin-bottom: - $footer-height
  min-height: 100%
  column(2/3)

  &:after
    content: ""
    display: block
    height: $footer-height

  a
    color: $blue-color
    &:hover, &:focus
      color: lighten($blue-color, 15%)

.dynamic-container--footer
  height: $footer-height
  padding: 0
