@import './../../../support/variables/colors.import';

// Social network links

.social__link {
  width: 40px;
  height: 40px;
  border: 2px solid $white-color;
  display: inline-block;
  vertical-align: top;
  margin-left: 15px;
  opacity: .7;
  text-align: center;
  transition: all .15s;
  &:hover{
    opacity: 1;
    border: 2px solid $purple-color;
    background: $purple-color;
  }
}

.social__link__icon {
  font-size: 24px;
  color: $white-color;
  margin: 5px;
}
